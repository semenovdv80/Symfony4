<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">

        <!-- Sidebar user panel (optional) -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="{{ '/images/1.jpg' }}" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                {{ app.user.username }}
                <!-- Status -->
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <ul class="sidebar-menu">
            <li class="header">{{ 'Menu'|trans }}</li>
            <li class="treeview {% if active_menu == 'admin_categories' %}active{% endif %}">
            <a href="#">
                <i class="fa fa-folder-open-o"></i>
                <span>{{ 'Categories'|trans }}</span>
                    <span class="pull-right-container">
                      <i class="fa fa-angle-left pull-right"></i>
                    </span>
            </a>
            <ul class="treeview-menu">
                <li class="{% if app.request.attributes.get('_route') == 'admin_category_list' %}active{% endif %}">
                    <a href="{{ path('admin_category_list') }}"><i class="fa fa-list-alt"></i>{{ 'List of categories'|trans }}</a>
                </li>
            </ul>
            </li>
            <li class="treeview {{ active_menu == 'adminUsers' ? "active" : '' }}">
            <a href="#">
                <i class="fa fa-users"></i>
                <span>{{ 'Users'|trans }}</span>
                    <span class="pull-right-container">
                      <i class="fa fa-angle-left pull-right"></i>
                    </span>
            </a>
            <ul class="treeview-menu">
                <li class="{% if app.request.attributes.get('_route') == 'adminUserList' %}active{% endif %}">
                    <a href="{{ path('adminUserList') }}"><i class="fa fa-users"></i>{{ 'List of users'|trans }}</a>
                </li>
                <li class="{% if app.request.attributes.get('_route') == 'adminUserAdd' %}active{% endif %}">
                    <a href="{{ path('adminUserAdd') }}"><i class="fa fa-user-plus"></i>{{ 'Add user'|trans }}</a>
                </li>
            </ul>
            </li>
        </ul>
        <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
</aside>