{% extends 'base.html.twig' %}

{% block content %}
<div class="container-fluid">
        <div class="row login-form">
            <div class="col-md-12 text-center">
                <h2>Вход на сайт</h2>
            </div>

        </div>

        <div class="row">
            <div class="well col-md-12 text-center">
                <div class="alert alert-info">
                    Пожалуйста введите ваш E-mail и пароль.
                </div>
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form action="{{ path('login') }}" method="post" class="form-horizontal">
                    <fieldset>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user red"></i></span>
                            <input type="text" id="email" name="_email" class="form-control" value="{{ last_email }}" />
                        </div>

                        <div class="clearfix"></div><br>

                        <div class="input-group input-group-lg">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock red"></i></span>
                            <input type="password" id="password" name="_password" class="form-control" />
                        </div>

                        <div class="clearfix"></div>

                        <div class="input-prepend">
                            <input type="checkbox" id="remember_me" name="_remember_me" />
                            <label class="remember" for="remember">Запомнить меня</label>
                        </div>
                        <div class="clearfix"></div>

                        {#
    If you want to control the URL the user
    is redirected to on success (more details below)
    <input type="hidden" name="_target_path" value="/account" />
#}

                        <p>
                            <button type="submit" class="btn btn-primary">Войти</button>
                        </p>
                    </fieldset>
                </form>
            </div>

        </div>
</div>
{% endblock %}